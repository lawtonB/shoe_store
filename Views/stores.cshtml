@if (@Model.Count == 0)
{
  <p>No Stores added yet</p>
}

<ul>
  @foreach (var store in @Model)
  {
    <li>
      <a href="/stores/@store.GetId()">@store.GetStore_Name()</a>
      <a href="/stores/add/@store.GetId()">Add</a>
      <a href="/stores/edit/@store.GetId()">Edit</a>
      <form action="/stores/delete/@store.GetId()" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" name="button">Delete</button>
      </form>
    </li>
  }
</ul>
<br>
<form class="store" action="stores/new" method="post">
  <label for="name"></label>
  <input id="store-name" type="text" name="store-name">
  <button type="submit">add store</button>
</form>
